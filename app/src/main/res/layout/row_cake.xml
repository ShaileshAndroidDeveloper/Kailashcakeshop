<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lout_cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/size_140dp"
            android:layout_height="@dimen/size_180dp"
            android:layout_margin="@dimen/size_4dp"
            android:background="@drawable/pink_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_3dp"
                    android:background="@color/colorAccent">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_cake"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_122dp"
                        android:padding="@dimen/size_2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_weddingcake" />

                </LinearLayout>

                <videoplayer.vishcoder.com.kailashcakeshop.util.font.TextViewMedium
                   android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/size_2dp"
                    android:paddingRight="@dimen/size_2dp"
                    android:text="All My Love Cake 1Kg fhdrhrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_margin="@dimen/size_6dp"
                    android:background="@color/colorAccent"
                    />

                <videoplayer.vishcoder.com.kailashcakeshop.util.font.TextViewMedium
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:text="Rs.1599.00"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>