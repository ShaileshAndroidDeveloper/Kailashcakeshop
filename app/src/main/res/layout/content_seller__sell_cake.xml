<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.Seller.Seller_SellCakeActivity"
    tools:showIn="@layout/activity_sell_cake"
    android:background="@color/white"
    android:id="@+id/lout_rmain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_8dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_20dp">

        <RelativeLayout
            android:id="@+id/lout_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:background="@drawable/pink_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_5dp"
                android:background="@drawable/bg_top_gradient_offer">

            </LinearLayout>

            <ImageView
                android:id="@+id/img_cake"
                android:layout_width="@dimen/size_200dp"
                android:layout_height="@dimen/size_200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/size_10dp"
                android:src="@drawable/img_anniversary"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/lout_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ic_plus"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_25dp"
                android:src="@drawable/ic_addphoto" />

                <videoplayer.vishcoder.com.kailashcakeshop.util.font.TextViewMedium
                   android:layout_below="@+id/ic_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Upload Cake Image"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/size_8dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:theme="@style/CheckFormEditTextHint">

            <videoplayer.vishcoder.com.kailashcakeshop.util.font.EditTextMedium
                android:id="@+id/edt_caketype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cake Type"
                android:paddingBottom="@dimen/size_16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:editable="false"
                android:textCursorDrawable="@drawable/edit_text_cursor_black"
                android:textSize="15sp"
                android:drawableRight="@drawable/ic_dropdown"
                android:theme="@style/CheckFormedtstyle"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:theme="@style/CheckFormEditTextHint">

            <videoplayer.vishcoder.com.kailashcakeshop.util.font.EditTextMedium
                android:id="@+id/edt_caketitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cake Title"
                android:paddingBottom="@dimen/size_16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_text_cursor_black"
                android:textSize="15sp"
                android:theme="@style/CheckFormedtstyle" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:theme="@style/CheckFormEditTextHint">

            <videoplayer.vishcoder.com.kailashcakeshop.util.font.EditTextMedium
                android:id="@+id/edt_cakedetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cake Detail"
                android:paddingBottom="@dimen/size_16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_text_cursor_black"
                android:textSize="15sp"
                android:theme="@style/CheckFormedtstyle" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"

            android:theme="@style/CheckFormEditTextHint">

            <videoplayer.vishcoder.com.kailashcakeshop.util.font.EditTextMedium
                android:id="@+id/edt_cakeflavour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Cake Flavour"
                android:paddingBottom="@dimen/size_16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_text_cursor_black"
                android:textSize="15sp"
                android:theme="@style/CheckFormedtstyle" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:theme="@style/CheckFormEditTextHint">

            <videoplayer.vishcoder.com.kailashcakeshop.util.font.EditTextMedium
                android:id="@+id/edt_cakerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:paddingBottom="@dimen/size_16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_text_cursor_black"
                android:textSize="15sp"
                android:inputType="number"
                android:theme="@style/CheckFormedtstyle" />

        </android.support.design.widget.TextInputLayout>

        <videoplayer.vishcoder.com.kailashcakeshop.util.font.ButtonBold
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp"
            android:background="@color/light_blue"
            android:text="SUBMIT"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>