<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="actionbarimgview">
        <item name="android:layout_width">@dimen/size_37dp</item>
        <item name="android:layout_height">@dimen/size_37dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="EditTextHint" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/ofwhite</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textStyle">normal</item>-->
        <item name="colorControlNormal">@color/ofwhite</item>

        <item name="colorControlActivated">@color/ofwhite</item>
        <!--<item name="colorControlHighlight">@color/edt_text_color_blue</item>-->
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="edtstyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlNormal">@color/white</item>
        //added attributes
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="CheckFormEditTextHint" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textStyle">normal</item>-->
        <item name="colorControlNormal">@color/black</item>

        <item name="colorControlActivated">@color/black</item>
        <!--<item name="colorControlHighlight">@color/edt_text_color_blue</item>-->
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="CheckFormedtstyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlNormal">@color/black</item>
        //added attributes
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!--menu-->

    <style name="ShowUpAnimation_TR">
        <item name="android:windowEnterAnimation">@anim/menu_show_up_tr</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_tr</item>
    </style>

    <style name="ShowUpAnimation_TL">
        <item name="android:windowEnterAnimation">@anim/menu_show_up_tl</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_tl</item>
    </style>

    <style name="ShowUpAnimation_BR">
        <item name="android:windowEnterAnimation">@anim/menu_show_up_br</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_br</item>
    </style>

    <style name="ShowUpAnimation_BL">
        <item name="android:windowEnterAnimation">@anim/menu_show_up_bl</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_bl</item>
    </style>

    <style name="ShowUpAnimation_Center">
        <item name="android:windowEnterAnimation">@anim/menu_show_up_center</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_center</item>
    </style>

    <style name="ElasticMenuAnimation_TR">
        <item name="android:windowEnterAnimation">@anim/menu_elastic_tr</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_tr</item>
    </style>

    <style name="ElasticMenuAnimation_TL">
        <item name="android:windowEnterAnimation">@anim/menu_elastic_tl</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_tl</item>
    </style>

    <style name="ElasticMenuAnimation_BR">
        <item name="android:windowEnterAnimation">@anim/menu_elastic_br</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_br</item>
    </style>

    <style name="ElasticMenuAnimation_BL">
        <item name="android:windowEnterAnimation">@anim/menu_elastic_bl</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_bl</item>
    </style>

    <style name="ElasticMenuAnimation_Center">
        <item name="android:windowEnterAnimation">@anim/menu_elastic_center</item>
        <item name="android:windowExitAnimation">@anim/menu_show_down_center</item>
    </style>

    <style name="FadeMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/menu_fade_in</item>
        <item name="android:windowExitAnimation">@anim/menu_fade_out</item>
    </style>


    <style name="TextviewDashboard">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="TextView_Style_8">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/size_8dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--menu over-->
    <style name="TextView_Style_12">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">@dimen/size_12dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
